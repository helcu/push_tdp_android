<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/imageCourse"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />
        <TextView
            android:id="@+id/nameCourse"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="nameCourse"
            android:maxLines="3"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/imageCourse"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal"
            tools:layout_editor_absoluteX="124dp" />
        <TextView
            android:id="@+id/numberOfStudentsView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="##"
            android:textSize="30dp"
            android:textColor="@color/colorBlue"
            app:layout_constraintTop_toBottomOf="@+id/nameCourse"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="end" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>